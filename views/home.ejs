<div class="popular-deals div bg-gray" style="margin-top: -4em">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="div-title" style="margin-left: 3em">
					<h2>Trending Hackathons</h2>
					<p>Discover the new and trending Hackathons near you.</p>
				</div>
			</div>
		</div>
		<div class="row" style="margin-top: 6em">
			<!-- offer 01 -->
			<% if(allHecks != undefined){ %>
				<% var i = 0 ; %>
				<% allHecks = allHecks.reverse() %>
				<% if(allHecks.length != 0){%> 
						<% allHecks.forEach((heck)=>{ %>
						<% if(i < 3){ %>
								<div class="col-sm-12 col-lg-4">
								<!-- product card -->
									<div class="product-item bg-light">
										<div class="card">
											<div class="thumb-content">
												<div class="price" style="font-size: 1.3em">$<%=heck.entryFees%></div>
												<a href="">
													<% if(heck.heckPoster != undefined){%>
														<% var posterUrl = heck.heckPoster %>
														<% posterUrl = posterUrl.slice(6,posterUrl.length) %>	
													<%}else{ %> 
														<% var posterUrl = null %>	
													<%} %>
													<img class="card-img-top img-fluid" src="./<%=posterUrl%>" alt="Poster">
												</a>
											</div>
											<div class="card-body">
												<h4 class="card-title"><a href=""><%=heck.eventName.toUpperCase() %></a></h4>
												<ul class="list-inline product-meta">
													<li class="list-inline-item">
														<a href="" style="font-size: 1.2em"><i class="fa fa-calendar"></i>Scheduled On : <%= heck.onDate.toString().slice(0,15)  %></a>
													</li>
													<li class="list-inline-item">
														<a href="" style="font-size: 1.2em"><i class="fa fa-calendar"></i>Posted On: <%= heck.createdOn.toString().slice(0,15)  %></a>
													</li>
													<li class="list-inline-item">
														<a href="" style="font-size: 1.2em"><i class="fa fa-map-marker" style="font-size: 1.5em"> </i> Venue : <%= heck.place %></a>
													</li>
												</ul>
												<p class="card-text">Posted By - <%= heck.ownerName %> </p>
												<div class="product-ratings">
													<a href="showHeck/<%=heck.id%>" class="btn btn-outline-success" style="position: absolute;right :8px;bottom : 20px;height: 3em;width: 10em;">Know More</a>
												</div>
											</div>
										</div>
									</div>	
							</div>	
							<% } %>
							<% i = i + 1 %>		
						<% }) %>
					
							
				<% }%>	
			<a class="btn btn-outline-danger" style="height : 3em;width : 10em;position : relative;top : 35em;left : 30em" href="allHecks"> See All </a>
			<%} %>
		</div>
	</div>
</div>



