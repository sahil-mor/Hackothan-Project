<%- include('./partials/header.ejs') %>
  <body>
    <div class="hero-wrap" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-start" data-scrollax-parent="true">
            <div class="col-lg-3 col-md-6 mt-0 mt-md-5">
                <% if(heck.heckPoster != undefined){%> 
                    <% var photoUrl = heck.heckPoster %>
                    <% photoUrl = photoUrl.slice(6,photoUrl.length) %>    
                <%}else{ %> 
                    <% var photoUrl = null %>    
                <%} %>
                <img class="card-img-top img-fluid" style="margin-top: -5em" src="<%=photoUrl%>" alt="Card image cap">
            </div>
          <div class="col-lg-1 col"></div>
          <div class="col-lg-4 col-md-6 ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
            <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"> <%= heck.ownerName %> <br><span> <%= heck.eventName %> </span></h1>
            <p class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="icon-calendar mr-2"></span> <%= heck.onDate.toString().slice(0,15) %> - <%= heck.place %> </p>
            <div id="timer" class="d-flex">
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mt-0 mt-md-5">
                <form action="#" class="request-form ftco-animate">
                        <h2>Join Conference</h2>
                              <div class="form-group">
                                  <input type="text" class="form-control" placeholder="Enter your Name">
                              </div>
                              <div class="form-group">
                                  <input type="text" class="form-control" placeholder="Enter your Email">
                              </div>
                              <div class="form-group">
                                  <input type="text" class="form-control" placeholder="Enter your Phone">
                              </div>
                              <div class="form-group">
                                      <div class="checkbox">
                                         <label><input type="checkbox" value="" class="mr-2"> I have read and accept the terms and conditions</label>
                                      </div>
                                  </div>
                      <div class="form-group">
                        <input type="submit" value="Join now" class="btn btn-primary py-3 px-4">
                      </div>
                          </form>
        </div>
        </div>
      </div>
    </div>
   
    <section class="ftco-section services-section bg-primary" style="height: 20em">
      <div class="container">
        <div class="row d-flex">
          <div class="col-md-3 d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services d-block" >
                <i class="fa fa-map-marker" aria-hidden="true" style="font-size: 5em;color : white;margin-top: 20px;margin-left: 5px" ></i>
              <div class="media-body">
                <h3 style="color : white" class="heading mb-3">Venue</h3>
                <p style="color : white;font-size : 1em ">	<%= heck.place %></p>
                <p style="color : white;font-size : 1em "> Duration : <%= heck.duration %></p>
              </div>
            </div>      
          </div>
          <div class="col-md-3 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services d-block">
                <i class="fa fa-users" aria-hidden="true" style="font-size: 5em;color : white;margin-top: 20px;margin-left: 5px"></i>
                  <div class="media-body">
                    <h3  style="color : white;margin-left: 1em;margin-top: 5px" class="heading mb-3">Team</h3>
                    <p style="color : white;font-size : 1em "> Maximum Members - <%= heck.maximumMembers %> </p>
                    <p style="color : white;font-size : 1em "> Minimum Members - <%= heck.minimumMembers %> </p>
                  </div>
                </div>      
              </div>
          <div class="col-md-3 d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services d-block">
            <i class="fa fa-money" aria-hidden="true" style="font-size: 5em;color : white;margin-top: 20px;margin-left: 5px"></i>
              <div class="media-body">
                <h3  style="color : white" class="heading mb-3">Entry Fees</h3>
                <p style="color : white;font-size : 1em "> Entry Fees - <%= heck.entryFees %> </p>
                <p style="color : white;font-size : 1em "> Prizes Worth - <%= heck.cashPrize %> </p>
              </div>
            </div>    
          </div>
          <div class="col-md-3 d-flex align-self-stretch ftco-animate">
            <div class="media block-6 services d-block">
            <i class="fa fa-info-circle" aria-hidden="true"style="font-size: 5em;color : white;margin-top: 20px;margin-left: 5px"></i>
                <div class="media-body">
                <h3 style="color : white;margin-top: 5px" class="heading mb-3">More Info</h3>
                <p style="color : white;font-size : 1em "> Categories -
                    <ul class="list-inline">
                        <% heck.categories.forEach((categ)=>{ %>
                            <li class="list-inline-item">
                                <strong><a href="" style="color : white;text-decoration: underline"> <%= categ %> </a></strong>
                            </li>   
                       <% }) %>
                    
                    </ul> </p>
                    <p style="color : white;font-size : 1em "> Starting Time - <%= heck.startingTime %> </p>
                </div>
                </div>   
                
              <p style="position: absolute;right : -22em;bottom : 0em;color : white">
                <i class="fa fa-mobile" aria-hidden="true" style="color : white;font-size : 5em;"></i>  
               <span style="font-size: 1.6em;position: relative;bottom: 0.6em;left: 0.3em"> Contact - <%= heck.phone %> </span> 
            </p>  
              </div>    
        </div>
      </div>
    </section>
	
 
<%- include('./partials/footer.ejs') %>